<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Counselor Registration</title>
    <link rel="stylesheet" href="/css/auth.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
  </head>
  <body class="counselor-register">
    <div class="auth-container">
      <div class="auth-card">
        <div class="auth-header">
          <h1>Counselor Registration</h1>
          <p>Join our platform as a professional counselor</p>
        </div>

        <% if (locals.error) { %>
        <div class="error-message"><%= error %></div>
        <% } %>

        <form class="auth-form" action="/counselor/register" method="POST">
          <div class="form-group">
            <div class="input-icon">
              <i class="fas fa-user"></i>
              <input type="text" name="name" placeholder="Full Name" required />
            </div>
          </div>

          <div class="form-group">
            <div class="input-icon">
              <i class="fas fa-envelope"></i>
              <input type="email" name="email" placeholder="Email" required />
            </div>
          </div>

          <div class="form-group">
            <div class="input-icon">
              <i class="fas fa-image"></i>
              <input
                type="url"
                name="imageUrl"
                placeholder="Profile Image URL"
                required
              />
            </div>
          </div>

          <div class="form-group">
            <div class="input-icon">
              <i class="fas fa-stethoscope"></i>
              <input
                type="text"
                name="specialty"
                placeholder="Specialty"
                required
              />
            </div>
          </div>

          <div class="form-group">
            <div class="input-icon">
              <i class="fas fa-briefcase"></i>
              <input
                type="number"
                name="experience"
                placeholder="Years of Experience"
                required
              />
            </div>
          </div>

          <div class="form-group">
            <textarea
              name="bio"
              placeholder="Professional Bio"
              required
            ></textarea>
          </div>

          <div class="form-group">
            <textarea
              name="qualifications"
              placeholder="Qualifications (comma-separated)"
              required
            ></textarea>
          </div>

          <div class="form-group">
            <div class="input-icon">
              <i class="fas fa-lock"></i>
              <input
                type="password"
                name="password"
                placeholder="Password"
                required
              />
              <button type="button" class="toggle-password">
                <i class="fas fa-eye"></i>
              </button>
            </div>
          </div>

          <button type="submit" class="btn btn-primary">
            <i class="fas fa-user-plus"></i>
            Register as Counselor
          </button>
        </form>
      </div>
    </div>
    <script src="/js/auth.js"></script>
  </body>
</html>
